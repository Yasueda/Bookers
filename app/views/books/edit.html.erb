<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error-box">
    <h2><%= @book.errors.count %> errors prohibited this book from being:</h2>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch, class: "book-form" do |f| %>
  <div class="book-form-item">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="book-form-item <%= $key %>">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Update Book", class: "book-submit" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<span> | </span>
<%= link_to "Back", '/books' %>